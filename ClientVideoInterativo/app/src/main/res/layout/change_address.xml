<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="CONFIGURATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/tittle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:text="ADDRESS:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tittle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="26dp"
        android:id="@+id/txt_address" />

    <TextView
        android:text="PORT:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_address"
        android:layout_alignLeft="@+id/txt_address"
        android:layout_alignStart="@+id/txt_address"
        android:layout_marginTop="35dp"
        android:id="@+id/txt_port" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="address"
        android:ems="10"
        android:layout_below="@+id/tittle"
        android:layout_toRightOf="@+id/txt_address"
        android:layout_toEndOf="@+id/txt_address"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="12dp"
        android:id="@+id/editText_address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="port"
        android:ems="10"
        android:layout_below="@+id/editText_address"
        android:layout_alignLeft="@+id/editText_address"
        android:layout_alignStart="@+id/editText_address"
        android:layout_marginTop="11dp"
        android:id="@+id/editText_port" />

    <Button
        android:text="SET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/set_address_button"
        android:layout_below="@+id/editText_port"
        android:layout_alignRight="@+id/editText_port"
        android:layout_alignEnd="@+id/editText_port"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <Button
        android:text="CLEAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_button"
        android:layout_alignBaseline="@+id/set_address_button"
        android:layout_alignBottom="@+id/set_address_button"
        android:layout_toRightOf="@+id/txt_port"
        android:layout_toEndOf="@+id/txt_port" />
</RelativeLayout>